<card class="post">
  <image rel="post image" src="../../public/images/default.png" />
  <div class="title">
    <a href="/post/{{id}}" target="_blank">{{title}}</a>
    {{!-- <span>({{format_url post_url}})</span> --}}
  </div>
  <div class="meta">
    {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
    |
    <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
  </div>
</card>