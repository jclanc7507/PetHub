<section>
  <h2>Create New Post</h2>

  <form class="new-post-form" action="/single" method="POST" enctype="multipart/form-data">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post_url">What's the Post About?</label>
      <input id="post_url" name="post_url" />
    </div>
    <div>
      <label for="post_image">Post Image</label>
      <input type="file" name="post_image" />
    </div>
    <button type="submit" class="btn">Post it!</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li class="card">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>